@model OnlineStore.Domain.Models.Order

<h1>Delete Order</h1>

<h3>Are you sure you want to delete this order?</h3>

<div>
    <h4>Order Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Order ID
        </dt>
        <dd class="col-sm-10">
            @Model.OrderId
        </dd>
        <dt class="col-sm-2">
            Customer Name
        </dt>
        <dd class="col-sm-10">
            @Model.CustomerName
        </dd>
        <dt class="col-sm-2">
            Order Date
        </dt>
        <dd class="col-sm-10">
            @Model.OrderDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Products
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var orderProduct in Model.OrderProducts)
                {
                    <li>@orderProduct.Product.Name (Quantity: @orderProduct.Quantity)</li>
                }
            </ul>
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="OrderId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
