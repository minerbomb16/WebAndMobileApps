@model TodoListSolution.Web.Models.EditTodoViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Edit Task</title>
</head>
<body>
    <div class="container-edit">
        <h1>Edit Task</h1>
        <form method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="hidden" name="CurrentOwner" value="@Model.CurrentOwner" />
            <label for="title">Title:</label>
            <input type="text" id="title" name="Title" value="@Model.Title" required />
            <label for="description">Description:</label>
            <textarea id="description" name="Description" required>@Model.Description</textarea>
            <div class="buttons-container">
                <button type="submit" class="btn-green">Save</button>
                <a href="@Url.Action("Index", new { owner = Model.CurrentOwner })" class="btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</body>
</html>
