@model OnlineStore.Domain.Models.Order

<h1>Order Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Order ID
        </dt>
        <dd class="col-sm-10">
            @Model.OrderId
        </dd>
        <dt class="col-sm-2">
            Customer Name
        </dt>
        <dd class="col-sm-10">
            @Model.CustomerName
        </dd>
        <dt class="col-sm-2">
            Order Date
        </dt>
        <dd class="col-sm-10">
            @Model.OrderDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Products
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var orderProduct in Model.OrderProducts)
                {
                    <li>@orderProduct.Product.Name (Quantity: @orderProduct.Quantity)</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-secondary">Edit</a>
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>
