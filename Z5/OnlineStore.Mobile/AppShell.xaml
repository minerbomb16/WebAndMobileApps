<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:OnlineStore.Mobile"
       x:Class="OnlineStore.Mobile.AppShell">

    <ContentPage>
        <VerticalStackLayout Padding="20" Spacing="20">
            <VerticalStackLayout Spacing="10">
                <Button Text="Categories"
                        Command="{Binding NavigateToCategoriesCommand}" />
                <Button Text="Products"
                        Command="{Binding NavigateToProductsCommand}" />
                <Button Text="Orders"
                        Command="{Binding NavigateToOrdersCommand}" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ContentPage>
</Shell>
