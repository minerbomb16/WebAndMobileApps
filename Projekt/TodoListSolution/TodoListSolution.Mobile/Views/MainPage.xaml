<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="TodoListSolution.Mobile.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:TodoListSolution.Mobile.ViewModels"
    xmlns:models="clr-namespace:TodoListSolution.Mobile.Models"
    x:Name="name_test">

    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Label Text="My Tasks"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <!-- NEW REFRESH BUTTON -->
            <Button Text="Refresh"
                    FontAttributes="Bold"
                    BackgroundColor="LightGreen"
                    Clicked="OnRefreshClicked" />

            <!-- Section: Add New Task -->
            <Frame BorderColor="LightGray" Padding="10" CornerRadius="8">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Add New Task" FontSize="18" FontAttributes="Bold"/>

                    <Entry Text="{Binding NewTitle}" 
                           Placeholder="Title..." />
                    <Entry Text="{Binding NewDescription}" 
                           Placeholder="Description..." />

                    <Button Text="Add"
                        FontAttributes="Bold"
                        BackgroundColor="LightBlue"
                        Command="{Binding AddTodoCommand}" />
                </VerticalStackLayout>
            </Frame>

            <!-- To Do section -->
            <Frame BorderColor="LightGray" Padding="10" CornerRadius="8">
                <VerticalStackLayout Spacing="10">
                    <Label Text="To Do"
                           TextColor="Orange"
                           FontSize="18"
                           FontAttributes="Bold" />

                    <CollectionView ItemsSource="{Binding UndoneTasks}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:TodoItemDTO">
                                <Grid ColumnDefinitions="Auto, *, Auto, Auto" Padding="5">
                                    <CheckBox
                                        Grid.Column="0"
                                        HorizontalOptions="Start"
                                        VerticalOptions="Center"
                                        IsChecked="{Binding IsCompleted}"
                                        CheckedChanged="OnCheckBoxCheckedChanged" />

                                    <VerticalStackLayout Grid.Column="1">
                                        <Label Text="{Binding Title}"
                                               FontAttributes="Bold"
                                               FontSize="15" />
                                        <Label Text="{Binding Description}"
                                               FontSize="12"
                                               TextColor="Gray" />
                                    </VerticalStackLayout>
                                    <Button Grid.Column="2"
                                            Text="Edit"
                                            BackgroundColor="LightBlue"
                                            HorizontalOptions="End"
                                            VerticalOptions="Center"
                                            Command="{Binding BindingContext.EditTodoCommand, Source={x:Reference name_test}}"
                                            CommandParameter="{Binding .}" />
                                    <Button Grid.Column="3"
                                        Text="x"
                                        BackgroundColor="LightCoral"
                                        HorizontalOptions="End"
                                        VerticalOptions="Center"
                                        Command="{Binding BindingContext.DeleteCommand, Source={x:Reference name_test}}"
                                        CommandParameter="{Binding .}" />

                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Completed section -->
            <Frame BorderColor="LightGray" Padding="10" CornerRadius="8">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Completed"
                           TextColor="Green"
                           FontSize="18"
                           FontAttributes="Bold" />

                    <CollectionView ItemsSource="{Binding DoneTasks}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:TodoItemDTO">
                                <Grid ColumnDefinitions="Auto, *, Auto" Padding="5">
                                    <CheckBox IsChecked="True"
                                              IsEnabled="False"
                                              VerticalOptions="Center" />
                                    <VerticalStackLayout Grid.Column="1">
                                        <Label Text="{Binding Title}"
                                               FontSize="15"
                                               TextColor="Gray"
                                               TextDecorations="Strikethrough" />
                                        <Label Text="{Binding Description}"
                                               FontSize="12"
                                               TextColor="LightGray"
                                               TextDecorations="Strikethrough" />
                                    </VerticalStackLayout>
                                    <Button Grid.Column="2"
                                            Text="x"
                                            BackgroundColor="LightCoral"
                                            HorizontalOptions="End"
                                            VerticalOptions="Center"
                                            Clicked="OnDeleteButtonClicked" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
